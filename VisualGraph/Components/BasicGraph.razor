                                      @ontouchenter="(args) => { OnEdgeTouchEnter(args, edge); }" @ontouchenter:stopPropagation="true"
                                      @ontouchend="(args) => { OnEdgeTouchEnd(args, edge); }" @ontouchend:stopPropagation="true" />
