@inject IGraphService GraphService
@inherits GraphInternalUI
    <style type="text/css">

        .vssvg g g text, .nodeText {
            font-size: @graphService.GraphStyleParameters.TextSizeText;
            fill: @graphService.GraphStyleParameters.TextColor;
        }
        .vssvg .hovertext {
            font-size:@((graphService.GraphStyleParameters.TextSize / 2).ToString(CultureInfo.InvariantCulture) + "px") ;

        }
        .vssvg circle{
            fill:@graphService.GraphStyleParameters.NodeFill;
            stroke:@graphService.GraphStyleParameters.NodeStrokeColor;
            stroke-width:@graphService.GraphStyleParameters.NodeStrokeWidthText;
        }
        .vssvg circle.active {
            fill: @graphService.GraphStyleParameters.NodeActiveFill;
        }

        .vssvg circle.@AlgorithmPage.EndNodeClass {
            fill: @graphService.GraphStyleParameters.NodeEndFill;
        }

        .vssvg circle.@AlgorithmPage.StartNodeClass {
            fill: @graphService.GraphStyleParameters.NodeStartFill;
        }
        .vssvg .edge {
            fill:transparent;
            stroke:@graphService.GraphStyleParameters.EdgeStrokeColor;
            stroke-width:@graphService.GraphStyleParameters.EdgeWidthText
        }
        .vssvg .edge.vgpath {
            stroke:@graphService.GraphStyleParameters.EdgeRouteColor;
            stroke-width:@graphService.GraphStyleParameters.EdgeRouteWidthText;
        }
        svg g g:hover .edge, svg g g:hover .edge {
            stroke: @graphService.GraphStyleParameters.EdgeHighlitingColor !important;
            stroke-width: @graphService.GraphStyleParameters.EdgeHighlitingWidthText;
        }
        .legend-edge {
            background-color: @graphService.GraphStyleParameters.EdgeStrokeColor;
        }

        .legend-edge.pathedge {
            background-color: @graphService.GraphStyleParameters.EdgeRouteColor;
        }

        .legend-node {
            border: 2px solid @graphService.GraphStyleParameters.NodeStrokeColor;
            background-color:@graphService.GraphStyleParameters.NodeFill;
        }

        .legend-node.@AlgorithmPage.StartNodeClass {
            background-color: @graphService.GraphStyleParameters.NodeStartFill;
        }

        .legend-node.@AlgorithmPage.EndNodeClass {
            background-color: @graphService.GraphStyleParameters.NodeEndFill;
        }

        .legend-node.active {
            background-color: @graphService.GraphStyleParameters.NodeActiveFill;
        }
    </style>

@code{ 
    public override IGraphService graphService => GraphService;
}